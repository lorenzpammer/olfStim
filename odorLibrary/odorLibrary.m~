function odorLibraryGenerator
%
% This function creates the odorLibrary structure. This structure contains
% information to every odor used in the Laurent lab. 
% Lorenz
%% A) List odors in the library:

odorNames = {'Benzyl Alcohol','Butanone','Camphor','Cineole','Citral', ...
    'Eugenol','Geranyl Acetate','Hexanal','1-Hexanol','2-Hexanone','Isoamyl Acetate', ...
    'Vanillin'}; % Cell array of strings with names of odorants in Library


%% B) 
odorLibrary(1:length(odorNames)) = struct('odorName',[],'iupacName',[],'CASNumber',[], 'producingCompany',[],...
    'odorantPurity',[], 'odorantDilution', 0.1, 'dilutedIn', [],'concentrationAtPresentation', 0.005);
for i = 1 : length(odorNames)
    odorLibrary(i).odorName = odorNames{i};
end


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Define further properties for every individual odor
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% Odor 1

odor = 'Benzyl Alcohol'; % make sure the name is the same as specified in the 'odorNames' cell array above
for i = 1 : length(odorLibrary)
    if odorLibrary(i).odorName == odor % at the respective odor write the following properties to the structure:
        odorLibrary(i).iupacName = 'Phenylmethanol'; % the name of the molecule following IUPAC convention
        odorLibrary(i).CASNumber = '100-51-6'; % the CAS registry number identifying the molecule
        odorLibrary(i).producingCompany = []; % the name of the company that produced the odorant: eg Sigma, Roth, etc.
        odorLibrary(i).odorantPurity = []; % purity of the molecule, usually above 95%
        odorLibrary(i).odorantDilution = 0.1; % volume fraction (v/v) of odorant in the vial after diluting it with water or oil
        odorLibrary(i).dilutedIn = []; % in which solution the odor was diluted: 'Water' 'Paraffin oil' 'Mineral oil' or empty
        odorLibrary(i).concentrationAtPresentation = 0.005; % concentration as volume fraction (v/v) of saturated headspace, which is presented to the animal
        odorLibrary(i).inflectionPointResponseCurve = []; % concentration (v/v, of saturated head space) of presented odorant at which the response curve as measured in olfactory nerve has its inflection point.
    end
end

%% Odor 2
odor = 'Butanone';
iupacName = '2-Butanone';
CASNumber = '78-93-3';
%% Odor 3
odor = 'Camphor';
iupacName = '1,7,7-Trimethylbicyclo[2.2.1]heptan-2-one';
CASNumber = '76-22-2';
%% Odor 4
odor = 'Cineole';
iupacName = '1,3,3-trimethyl-2-oxabicyclo[2,2,2]octane';
CASNumber = '470-82-6';
%% Odor 5
odor = 'Citral';
iupacName = '3,7-dimethylocta-2,6-dienal';
CASNumber = '5392-40-5';
%% Odor 6
odor = 'Eugenol';
iupacName = '4-Allyl-2-methoxyphenol';
CASNumber = '97-53-0';
%% Odor 7
odor = 'Geranyl acetate';
iupacName = '3,7-Dimethyl-2,6-octadiene acetate';
CASNumber = '105-87-3';
%% Odor 8
odor = 'Hexanal';
iupacName = 'Hexanal';
CASNumber = '66-25-1';
%% Odor 9
odor = '1-Hexanol';
iupacName = '1-Hexanol';
CASNumber = '111-27-3';
%% Odor 10
odor = '2-Hexanone';
iupacName = 'Hexan-2-one';
CASNumber = '591-78-6';
%% Odor 11
odor = 'Isoamyl Acetate';
iupacName = '3-methyl-1-butyl acetate';
CASNumber = '123-92-2';
%% Odor 12
odor = 'Vanillin';
iupacName = '4-Hydroxy-3-methoxybenzaldehyde';
CASNumber = '121-33-5';
end